<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".developerInfo"
    android:background="@color/red_fade"
    >

    <ImageView
        android:id="@+id/div"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/cicular_image"
        android:src="@mipmap/divyam"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="20dp"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/div"
        app:layout_constraintLeft_toRightOf="@+id/div"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/div"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DIVYAM BANSAL"
            android:textSize="18sp"
            android:layout_margin="8dp"
            android:gravity="center_vertical"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1221206"
            android:textSize="18sp"
            android:layout_margin="8dp"
            android:gravity="center_vertical"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B.Tech CSE 3rd-Year"
            android:textSize="18sp"
            android:layout_margin="8dp"
            android:gravity="center_vertical"
            />

    </LinearLayout>



    <ImageView
        android:id="@+id/har"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/cicular_image"
        android:src="@mipmap/harsh"
        app:layout_constraintTop_toBottomOf="@id/div"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/har"
        app:layout_constraintLeft_toRightOf="@+id/har"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/har"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HARSH BHARGAVA"
            android:textSize="18sp"
            android:layout_margin="8dp"
            android:gravity="center_vertical"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1221220"
            android:textSize="18sp"
            android:layout_margin="8dp"
            android:gravity="center_vertical"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B.Tech CSE 3rd-Year"
            android:textSize="18sp"
            android:layout_margin="8dp"
            android:gravity="center_vertical"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>