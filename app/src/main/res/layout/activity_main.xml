<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/red_fade"
    >

    <Button
        android:id="@+id/btAdmin"
        android:layout_width="90dp"
        android:layout_height="34dp"
        android:text="Admin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="12sp"
        android:layout_margin="8dp"
        android:backgroundTint="@color/red"

        />

    <ImageView
        android:id="@+id/ivJmitBDMicon"
        android:layout_width="30dp"
        android:layout_height="30dp"
       android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="@id/btAdmin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/btAdmin"

        android:background="@drawable/cicular_image"
        android:src="@mipmap/icon_image_circle"
        />

    <ImageView
        android:id="@+id/ivJmitmukand"
        android:layout_width="200dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/btAdmin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@mipmap/mukand"
        android:layout_margin="5dp"
        />


    <TextView
        android:id="@+id/tvBDM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ivJmitmukand"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:textSize="24sp"
        android:text="Blood Donation Mela 2k23"
        android:textAlignment="center"
        android:textColor="@color/red"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/liveData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="•Live Donations Statics•"
        android:textAlignment="center"
        android:textSize="22sp"
        android:layout_margin="10dp"
        android:padding="8dp"

        app:layout_constraintTop_toBottomOf="@+id/tvBDM"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/green"
        android:textStyle="bold"
        />
    <LinearLayout
        android:id="@+id/llTotalRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/liveData"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Registrations :"
            android:layout_margin="4dp"
            android:textSize="16sp"
            android:padding="2dp"
            android:layout_gravity="center"
            android:textColor="@color/red"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tvTotalRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_margin="4dp"
            android:textSize="18sp"
            android:padding="4dp"
            android:layout_gravity="center"
            android:textColor="@color/green"
            />
    </LinearLayout>

    <ScrollView
        android:id="@+id/svData"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/llTotalRegister"
        app:layout_constraintBottom_toTopOf="@+id/tvDev"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="10dp"
        android:background="@drawable/border"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="8dp"
            android:padding="8dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Blood Bank Wise Data"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:padding="2dp"
                android:textStyle="bold"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PGI Registrations :"
                    android:layout_margin="4dp"
                    android:textSize="16sp"
                    android:padding="2dp"
                    android:layout_gravity="center"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/tvPGIRegister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_margin="4dp"
                    android:textSize="16sp"
                    android:padding="2dp"
                    android:layout_gravity="center"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Red Cross Registrations :"
                    android:layout_margin="4dp"
                    android:textSize="16sp"
                    android:padding="2dp"
                    android:layout_gravity="center"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/tvRDCRegister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_margin="4dp"
                    android:textSize="16sp"
                    android:padding="2dp"
                    android:layout_gravity="center"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Others Registrations :"
                    android:layout_margin="4dp"
                    android:textSize="16sp"
                    android:padding="2dp"
                    android:layout_gravity="center"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/tvOtherRegister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_margin="4dp"
                    android:textSize="16sp"
                    android:padding="2dp"
                    android:layout_gravity="center"
                    />
            </LinearLayout>

            <!--Donor Type-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Donor Type Wise Data"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:padding="2dp"
                android:textStyle="bold"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Students :"
                    android:layout_margin="4dp"
                    android:textSize="16sp"
                    android:padding="2dp"
                    android:layout_gravity="center"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/tvStudents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_margin="4dp"
                    android:textSize="16sp"
                    android:padding="2dp"
                    android:layout_gravity="center"
                    android:minWidth="50dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Teaching:"
                    android:layout_margin="4dp"
                    android:textSize="16sp"
                    android:padding="2dp"
                    android:layout_gravity="center"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/tvTeaching"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_margin="4dp"
                    android:textSize="16sp"
                    android:padding="2dp"
                    android:layout_gravity="center"
                    android:minWidth="50dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alumni :"
                    android:layout_margin="4dp"
                    android:textSize="16sp"
                    android:padding="2dp"
                    android:layout_gravity="center"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/tvAlumni"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_margin="4dp"
                    android:textSize="16sp"
                    android:padding="2dp"
                    android:layout_gravity="center"
                    android:minWidth="50dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Non-Teaching:"
                    android:layout_margin="4dp"
                    android:textSize="16sp"
                    android:padding="2dp"
                    android:layout_gravity="center"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/tvNonTeaching"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_margin="4dp"
                    android:textSize="16sp"
                    android:padding="2dp"
                    android:layout_gravity="center"
                    android:minWidth="50dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Guest :"
                    android:layout_margin="4dp"
                    android:textSize="16sp"
                    android:padding="2dp"
                    android:layout_gravity="center"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/tvGuest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_margin="4dp"
                    android:textSize="16sp"
                    android:padding="2dp"
                    android:layout_gravity="center"
                    android:minWidth="50dp"
                    />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/tvDev"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/svData"
        android:textSize="12sp"
        android:text="Developer Information"
        android:textAlignment="center"
        android:padding="2dp"
        android:layout_margin="4dp"
        android:textColor="@color/red_fade"
        />

</androidx.constraintlayout.widget.ConstraintLayout>